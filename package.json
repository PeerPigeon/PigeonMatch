    "@vitest/ui": "^4.0.8",
    "happy-dom": "^20.0.10",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.8",
    "vue": "^3.3.0"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1",
